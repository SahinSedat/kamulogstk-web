// ==========================================
// GENEL KURUL YÖNETİMİ
// ==========================================

enum AssemblyType {
  OLAGAN // Olağan genel kurul
  OLAGANUSTU // Olağanüstü genel kurul
}

enum AssemblyStatus {
  PLANNED // Planlandı
  IN_PROGRESS // Devam ediyor
  COMPLETED // Tamamlandı
  CANCELLED // İptal edildi
}

enum AttendanceType {
  IN_PERSON // Şahsen
  BY_PROXY // Vekaletle
}

model GeneralAssembly {
  id    String @id @default(cuid())
  stkId String
  stk   STK    @relation(fields: [stkId], references: [id], onDelete: Cascade)

  // Genel Kurul Bilgileri
  assemblyType   AssemblyType
  assemblyNumber Int // Kaçıncı genel kurul
  assemblyDate   DateTime
  location       String

  // Katılım Bilgileri
  quorumRequired Int // Toplantı yeter sayısı
  attendeeCount  Int? // Katılımcı sayısı
  proxyCount     Int? // Vekaletle katılım sayısı

  // Tutanak
  minutesContent String? @db.Text
  minutesPdf     String? // PDF dosya yolu

  // Durum
  status AssemblyStatus @default(PLANNED)

  // İlişkiler
  agendaItems AssemblyAgendaItem[]
  attendees   AssemblyAttendee[]
  proxies     AssemblyProxy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([stkId, assemblyNumber])
  @@index([stkId])
  @@index([assemblyDate])
  @@index([status])
}

model AssemblyAgendaItem {
  id         String          @id @default(cuid())
  assemblyId String
  assembly   GeneralAssembly @relation(fields: [assemblyId], references: [id], onDelete: Cascade)

  orderNumber Int // Gündem sırası
  title       String
  description String? @db.Text
  decision    String? @db.Text // Alınan karar

  createdAt DateTime @default(now())

  @@index([assemblyId])
}

model AssemblyAttendee {
  id         String          @id @default(cuid())
  assemblyId String
  assembly   GeneralAssembly @relation(fields: [assemblyId], references: [id], onDelete: Cascade)
  memberId   String

  attendType  AttendanceType @default(IN_PERSON)
  checkinTime DateTime?
  signature   Boolean        @default(false) // İmza attı mı

  createdAt DateTime @default(now())

  @@unique([assemblyId, memberId])
  @@index([assemblyId])
  @@index([memberId])
}

model AssemblyProxy {
  id         String          @id @default(cuid())
  assemblyId String
  assembly   GeneralAssembly @relation(fields: [assemblyId], references: [id], onDelete: Cascade)

  giverId    String // Vekalet veren üye ID
  receiverId String // Vekalet alan üye ID
  proxyDoc   String? // Vekaletname dosyası

  isApproved Boolean   @default(false)
  approvedBy String?
  approvedAt DateTime?

  createdAt DateTime @default(now())

  @@unique([assemblyId, giverId])
  @@index([assemblyId])
  @@index([giverId])
  @@index([receiverId])
}

