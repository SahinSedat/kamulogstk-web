  @@index([stkId])
}

// ==========================================
// YIL BAZLI ARŞİVLEME
// ==========================================

enum RecordType {
  MEMBER // Üye kaydı
  PAYMENT // Ödeme kaydı
  DECISION // Karar kaydı
  ASSEMBLY // Genel kurul
  DOCUMENT // Belge
}

model Archive {
  id    String @id @default(cuid())
  stkId String
  stk   STK    @relation(fields: [stkId], references: [id], onDelete: Cascade)

  year       Int
  recordType RecordType
  recordId   String // Orijinal kayıt ID'si
  snapshot   Json // Kayıt anlık görüntüsü

  isLocked   Boolean   @default(false)
  lockedAt   DateTime?
  lockedBy   String?
  lockReason String?

  createdAt DateTime @default(now())

  @@unique([stkId, recordType, recordId])
  @@index([stkId])
  @@index([year])
  @@index([recordType])
  @@index([isLocked])
}
