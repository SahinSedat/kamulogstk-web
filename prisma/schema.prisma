model STKRole {
  id    String @id @default(cuid())
  stkId String
  stk   STK    @relation(fields: [stkId], references: [id], onDelete: Cascade)

  name        String // Başkan, Muhasip, Sekreter vb.
  description String?
  level       Int     @default(1) // Yetki seviyesi (1-10)

  // İzinler JSON formatında
